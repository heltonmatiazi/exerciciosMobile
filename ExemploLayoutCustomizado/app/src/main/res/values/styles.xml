<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="editText" parent="base">
        <item name="android:elevation">7dp</item>
        <item name="android:color">#87ac1111</item>
        <item name="android:inputType">text</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:hint">@string/hint</item>
        <item name="android:background">@drawable/edit_text</item>
    </style>

    <style name="botao" parent="base">
        <item name="android:padding">10dp</item>
        <item name="android:text">@string/testando</item>
        <item name="android:background">@drawable/botao</item>
    </style>
</resources>
