<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.senac.cademeulivro">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data android:name="com.facebook.sdk.ApplicationId"
                   android:value="@string/facebook_app_id"/>
        <activity
            android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.facebook.FacebookActivity"
                  android:configChanges=
                      "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
                  android:label="@string/app_name" />
        <activity android:name=".activity.obra.ObraDetalhadaActivity" />
        <activity android:name=".activity.obra.ObraDetalhadaEditActivity" />
        <activity android:name=".activity.tag.TagEditActivity" />
        <activity android:name=".activity.resultados.ResultadoPesquisaActivity" />
        <activity android:name=".activity.resultados.ResultadoScannerActivity" />
        <activity android:name=".activity.tag.ObrasComATagActivity"/>
        <activity android:name=".activity.MainActivity"  android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".activity.container.CadastroPagerActivity"></activity>
        <activity android:name=".activity.container.ContainerEditActivity"></activity>

        <receiver android:name=".util.classes.AlarmReceiver" />

    </application>

</manifest>